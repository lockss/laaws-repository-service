_0="$(basename "${0}")"

Check_Dir()
{
  if [ ! -d "${1}" ]; then
    echo "${_0}: directory not found: ${1}"
    exit 1
  fi
}

Check_Executable()
{
  if ! which "${1}" > /dev/null 2>&1 ; then
    echo "${_0}: ${1} not on the PATH"
    exit 1
  fi
}

Check_File()
{
  if [ ! -f "${1}" ]; then
    echo "${_0}: file not found: ${1}"
    exit 1
  fi
}

Check_Set()
{
  if [ -z "${1}" ]; then
    echo "${_0}: environment variable is not set: ${2}"
    exit 1
  fi
}

Check_Executable 'curl'
Check_Executable 'nc'
Check_Set "${LOCKSS_REST_PORT}" LOCKSS_REST_PORT
Check_Dir "${LOCKSS_PIDS}"
Check_File "${LOCKSS_PIDS}/lockss.pid"
ps -p "$(cat "${LOCKSS_PIDS}/lockss.pid")" > /dev/null || exit 1
nc -z -w 10 localhost "${LOCKSS_REST_PORT}" || exit 1
curl --silent --max-time 10 --location "http://localhost:${LOCKSS_REST_PORT}/status" || exit 1
